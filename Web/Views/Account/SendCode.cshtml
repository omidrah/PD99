@model Web.Models.SendCodeViewModel
@{
    ViewBag.Title = "کد تایید";
}
<div class="banner-bootom-w3-agileits">
    <div class="col-md-8 single-right-left simpleCart_shelfItem">
        <h3>لطفاروش تایید را انتخاب کنید   </h3>
    </div>
    <div class="container">
        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <h4>Send verification code</h4>
            <hr />
            <div class="row">
                <div class="col-md-8">
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                    <input type="submit" value="تایید" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
