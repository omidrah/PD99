@model DomainClass.Models.Product

<div class="col-md-4 col-sm-6">
    <div class="border-radius">
        <span>
            <img style="width: 100%;height: 150px" src="~/Uploads/ImgProducts/Thumb/@Model.PicPath">
        </span>
        <h2>
            <a href="/Products/ShowProduct/@Model.ProductId">
                <b> @Model.ProductName </b>|| @Model.ProductGroup.ProductGroupTitle
            </a>
        </h2>
        @*<h6>افزودن به لیست مقایسه <input type="checkbox"></h6>*@
        <hr />
        <span class="col-md-9 col-sm-9 col-xs-9 price-layer">
            @if (Model.Price != null)
            {
                @*<label>@Model.Price.ToString("#,0")  تومان</label>*@
                <label>@Model.Price  تومان</label>
            }
            else
            {
                <label>&nbsp </label>
            }
        </span>
        @if (Model.Price != null)
        {

            <a onclick="AddToCart(@Model.ProductId,'Product')" class="col-md-2 col-sm-2 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 buy-button border-radius">
                <label><i class="fa fa-shopping-basket"></i></label>
            </a>
        }
        else
        {
         <label> &nbsp </label>
        }
    </div>
</div>
